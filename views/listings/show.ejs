<% layout('/layouts/boilerplate') -%>
<div class="col-8 offset-2">
    <h3>Listing Details</h3>
</div>

<div class="card col-6 offset-2">
    <img src="<%=listing.image.url %>" class="card-img-top" alt="listing image">
    <div class="card-body">
      <p class="card-text">
        <b><%=listing.title%> <br></b>
        <%= listing.description %> <br>
        <%= listing.price.toLocaleString("en-IN") %> <br>
        <%= listing.location %> <br>
        <%= listing.country %>
    </p>
    </div>
  </div>
    <div class="row offset-2">
            <a href="/listings/<%= listing.id %>/edit" class=" show-btn btn btn-dark edit-btn col-1 col-1">Edit</a>

            <form method="POST" action="/listings/<%= listing.id %>?_method=DELETE" class="col-2">
                <button class="btn btn-dark">Delete</button>
            </form>
    </div>
    

    <hr>

    <h3>Write a review</h3>
    <form method="POST" action="/listings/<%= listing.id %>/review">
        <div>
            <label for="rating">Rating</label>
            <input name="review[rating]" type="range" min="1" max="5" id="rating">
        </div>
        <div>
            <label for="comment">Comment</label>
            <textarea name="review[comment]" id="comment" required ></textarea>
        </div>
        <button>Subnit</button>
    </form>

    <hr>
    <h3>Rewiews</h3>
    <br>
    
   <ul>

    <% for(let review of listing.reviews){ %>
      
        <li>
            <p> Orner Name </p>
            <p><%= review.comment %></p>
            <p><%= review.rating %> Stars</p>
            <form method="POST" action="/listings/<%= listing.id %>/review/<%= review.id %>?_method=DELETE">
                <button>Delete</button>
            </form>
        </li>

    <% } %>

   </ul>

