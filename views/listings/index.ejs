<% layout('/layouts/boilerplate') -%>
    <!-- <h3 style="margin-left: 2rem;">All Listings</h3> -->
    <div class="search-box2 container-fluid ">
      <form class="d-flex" role="search">
        <input class="form-control search-box col-10 me-2" type="search" placeholder="Find Your Place to Stay" aria-label="Search">
        <button class="btn btn-search btn-dark" type="submit">Search</button>
      </form>
    </div>
    <div class="filters container-fluid">
      <div class="filter">
        <i class="fa-solid fa-fire filter-content"></i>
        <p class="filter-content">Trending</p>
      </div>
      <div class="filter">
        <i class="fa-solid fa-tractor filter-content"></i>
        <p class="filter-content">Farms</p>
      </div>
      <div class="filter">
        <i class="fa-solid fa-cloud-sun filter-content"></i>
        <p class="filter-content">Amazing View</p>
      </div>
      <div class="filter">
        <i class="fa-solid fa-bed filter-content"></i>
        <p class="filter-content">Rooms</p>
      </div>
      <div class="filter">
        <i class="fa-solid fa-person-swimming filter-content"></i>
        <p class="filter-content">Pools</p>
      </div>
      <div class="filter">
        <i class="fa-solid fa-mountain-city filter-content"></i>
        <p class="filter-content">Mountain City</p>
      </div>
      <div class="filter">
        <i class="fa-solid fa-campground filter-content"></i>
        <p class="filter-content">Camping</p>
      </div>
      <div class="filter">
        <i class="fa-regular fa-snowflake filter-content"></i>
        <p class="filter-content">Arctic</p>
      </div>
      <div class="filter">
        <i class="fa-solid fa-monument filter-content"></i>
        <p class="filter-content">Historical Homes</p>
      </div>
      <div class="filter">
        <i class="fa-solid fa-tower-observation filter-content"></i>
        <p class="filter-content">Towers</p>
      </div>
      <div class="filter">
        <i class="fa-solid fa-ship filter-content"></i>
        <p class="filter-content">House Boat</p>
      </div>
      <div class="form-check-reverse form-switch toggler-btn">
        
        <label class="form-check-label me-2" for="flexSwitchCheckDefault">Display total After taxes</label>
        <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
      </div>

      <script>
        let togglar_btn= document.getElementById("flexSwitchCheckDefault");
      togglar_btn.addEventListener("click",()=>{
      let tax_texts=document.getElementsByClassName("tax-text");
      for(let tax_text of tax_texts){
        if(tax_text.style.display=="inline"){
          tax_text.style.display="none";
        }
        else{
          tax_text.style.display="inline";
        }
      }
  })
  </script>
  
    </div>
    <div class="all-listings row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 ">
        <% for(let listing of allListings) { %>
            <a href="/listings/<%= listing.id %>" class="listing-link">
            <div class="card col-3 listing-card" style="width: 20rem;">
                <img src="<%= listing.image.url %>" class="card-img-top" alt="image">
                <div class="card-img-overlay"></div>
                <div class="card-body">
                  <p class="card-text">
                    <%= listing.title %> <br>
                    &#8377;<%= listing.price.toLocaleString("en-IN") %>/night
                    <i class="tax-text"> &nbsp; +18% GST</i>
                  </p>
                </div>
              </div>
            </a>
              <% } %>
    </div> 
    


